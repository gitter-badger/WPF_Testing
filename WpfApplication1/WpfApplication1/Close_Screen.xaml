<Window x:Class="WpfApplication1.Close_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Confirm Window" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Yes" HorizontalAlignment="Left" Margin="33,92,0,0" VerticalAlignment="Top" Width="97" Height="87" Grid.ColumnSpan="2" Click="button_Click"/>
        <Button x:Name="button1" Content="No" HorizontalAlignment="Left" Margin="75.087,92,0,0" VerticalAlignment="Top" Width="97" Height="87" Grid.Column="1" Click="button1_Click"/>
        <Label x:Name="label" Content="Are you sure you want to quit?" HorizontalAlignment="Left" Margin="61,37,0,0" VerticalAlignment="Top" Height="36" Width="172" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
